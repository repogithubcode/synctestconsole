@model ProEstimator.Admin.ViewModel.SalesRep.SalesRepPermissionsVM

@using ProEstimator.Admin.ViewModel;
@using ProEstimator.Admin.ViewModel.SalesRep;

@{
    ViewBag.Title = "Administration - Sales Rep Permission";
    Layout = "~/Views/Shared/_LayoutPlain.cshtml";
}

<style>
    .input-group-addon {
        min-width: 150px;
        text-align: left;
    }

    .padd-top {
        padding-top: 30px;
        padding-bottom: 30px;
    }

    .option-wrapper {
        clear: both;
        padding: 5px;
        height: 30px;
    }

    .option-left {
        width: 30%;
        float: left;
        padding-left: 10px;
    }

    .option-wrapper label {
        font-size: 15px !important;
    }

    .option-right {
        width: 70%;
        float: right;
    }

    .indented {
        padding-left: 18px;
    }
</style>

<script>

    $(document).ready(function () {

        // SalesRep selectedIndexChange event
        $("#SalesRepDDL").change(function () {
            window.location.href = "/SalesRepPermission/List/" + $("#SalesRepDDL").val();
            });

            });

</script>

@if (ProEstimator.Business.Logic.Admin.SalesRepPermissionManager.HasPermission(Model.SessionSalesRepID, "RepPermissions"))
{
    using (Html.BeginForm("Index", "SalesRepPermission", FormMethod.Post, new { @class = "container" }))
    {
        @Html.HiddenFor(o => o.SalesRepID)

<div class="row padd-top">

    <div class="col-lg-8 col-md-7 col-sm-6">
        <h3>
            Sales Rep Permission
        </h3>
    </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4>Sales Rep Detail</h4>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-1">
                                &nbsp;
                            </div>
                            <div class="col-lg-2">
                                <span class="input-group-addon">Sales Rep #</span>
                            </div>
                            <div class="col-lg-4">
                                    @Html.DropDownListFor(model => model.SelectedSalesRepPermission, Model.SalesRepPermissionLookupDDL, new { @id = "SalesRepDDL", style = "width: 300px; height:30px" })
                            </div>
                        </div>
                    </div>

                    <div class="panel-footer">
                        <div class="col-lg-10 pull-left">

                        </div>
                        <div class="col-lg-2 pull-left">
                                <input class="btn btn-primary" type="submit" value="Save" style="width:95% !important" />
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>

            @for (int groupIndex = 0; groupIndex < Model.PermissionGroups.Count; groupIndex++)
            {
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4>@Model.PermissionGroups[groupIndex].Name</h4>
                    </div>

                    <div>
                        @for (int i = 0; i < Model.PermissionGroups[groupIndex].Permissions.Count; i++)
                        {
                            @Html.HiddenFor(model => model.PermissionGroups[groupIndex].Permissions[i].PermissionID)
                            @Html.HiddenFor(model => model.PermissionGroups[groupIndex].Permissions[i].Tag)

                            <div class="option-wrapper">
                                <div class="option-left">
                                    <label>
                                        @Html.CheckBoxFor(x => @Model.PermissionGroups[groupIndex].Permissions[i].HasPermission)
                                        @Model.PermissionGroups[groupIndex].Permissions[i].Name
                                    </label>
                                </div>
                                <div class="option-right">
                                    @Model.PermissionGroups[groupIndex].Permissions[i].Description
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            </div>
        }
    }
    else
    {
        <p>You do not have access to this page.</p>
    }
