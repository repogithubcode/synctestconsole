<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Web-Est Administration</title>

    <script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")" type="text/javascript"></script>  

    <script src="@Url.Content("~/Scripts/jquery-ui-1.12.1/jquery-ui.min.js")" type="text/javascript"></script>  
    <link rel="stylesheet" href="@Url.Content("~/Scripts/jquery-ui-1.12.1/jquery-ui.css")" />

    <link href="@Url.Content("~/Content/kendo/2015.1.318/kendo.common.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/kendo/2015.1.318/kendo.mobile.all.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/kendo/2015.1.318/kendo.dataviz.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/kendo/2015.1.318/kendo.default.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/kendo/2015.1.318/kendo.dataviz.default.min.css")" rel="stylesheet" type="text/css" />

    <link rel="stylesheet" href="@Url.Content("~/Content/DataTables/css/jquery.dataTables.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/DataTables/css/select.dataTables.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Scripts/DataTables/editor.dataTables.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Scripts/DataTables/select.dataTables.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/Style.css?id=1")" />

    <script src="@Url.Content("~/Scripts/kendo/2015.1.318/jszip.min.js")"></script>
    <script src="@Url.Content("~/Scripts/kendo/2015.1.318/kendo.all.min.js")"></script>
    <script src="@Url.Content("~/Scripts/kendo/2015.1.318/kendo.aspnetmvc.min.js")"></script>
    <script src="@Url.Content("~/Scripts/kendo.modernizr.custom.js")"></script>

    <script>
        $(document).on('click', '[type="submit"][data-form-action]', function (event) {
            var $this = $(this);
            var formAction = $this.attr('data-form-action');
            $this.closest('form').attr('action', formAction);
        });
    </script>

    <style>
        

        .top-strip {
            background-color: #222222;
            height: 45px;
            width: 100%;
            position: fixed;
            top: 0;
            left: 0;
        }

        .top-spacer {
            width: 100%;
            height: 45px;
        }

        .top-center {
            max-width: 1100px;
            margin: 0px auto;
            color: white;
        }

        .top-center h1 {
            margin: 3px 0px;
        }

        .top-section {
            float: left;
            padding: 0px;
            margin: 0px;
        }

        .admin-container {
            max-width: 1100px;
            margin: 0px auto;
            height: 100%;
            overflow-y: auto;
        }

        .main-menu {
            padding: 0px;
            list-style: none;
            margin-top: 5px;
            margin-left: 20px;
        }

        .main-menu li {
            float: left;
            padding: 9px;
            margin-left: 10px;
            cursor: pointer;
        }

        .main-menu li:hover {
            background-color: gray;
        }

        .menu-drop-down {
            padding: 0px;
            margin: 0px;
            list-style: none;
        }

        .drop-down-container {
            position: absolute;
            display: none;
        }

        .menu-drop-down li {
            background-color: #222222;
            width: 200px;
            padding: 9px;
            cursor: pointer;
        }

        .menu-drop-down a {
            color: white;
            text-decoration: none;
        }

        .menu-drop-down li:hover {
            background-color: gray;
        }

        .sales-rep-details {
            float: right;
            padding-top: 15px;
        }

        .page-header {
            margin-top: 5px;
        }

        .container {
            width: 100%;
            max-width: 1500px;
        }

        h1 {
            margin-top: 5px;
            margin-bottom: 5px;
            font-size: 1.7em;
        }

        .deleted-label {
            font-size: 12px;
            font-weight: normal;
        }

        .deleted-row {
            color: lightgray;
            font-style: italic;
        }

        .past-due {
            color: red !important;
            font-weight: bold !important;
        }

        .field-invalid {
            background-color: pink !important;
        }

        .details-form td {
            padding: 1px;
        }

        .ui-datepicker-trigger {
            cursor: pointer;
        }

        select {
            width: 258px;
            height: 23px;
        }

        input:focus {
            background-color: #f6f6f6;
        }
    </style>
</head>
<body>

    <div class="top-strip">
        <div class="top-center">
            <div class="top-section">
                <h1>ProEstimator Administration</h1>
            </div>
        </div>
    </div>
    <div class="top-spacer">
        &nbsp;
    </div>
    <div class="admin-container">
        <div id="banner" class="page-header">
            <div growl></div>
            @RenderBody()
        </div>
    </div> 
</body>
</html>