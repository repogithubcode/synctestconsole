@model Proestimator.ViewModel.SignAgreementVM

@{
    ViewBag.Title = @Proestimator.Resources.ProStrings.PageTitle_SignAgreement;
}

<script src="@Url.Content("~/Scripts/jquery.maskedinput.js")" type="text/javascript"></script>

<script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#divVerifyInfo").toggle();

        $("#btnContinue").click(function () {
            $("#divIntro").toggle();
            $("#divVerifyInfo").toggle();
        });

        $("#btnContinue2").click(function () {
            $("#divVerifyInfo").toggle();
        });        
    });
</script>

<div id="workDesk" class="page-container">
    <form action="" method="post" class="container">

        <div id="divIntro" class="container">
            <h1>@Proestimator.Resources.ProStrings.SignAgreement_Header</h1>

            <p>
                @Proestimator.Resources.ProStrings.SignAgreement_Text
            </p>

            <center>
                <input type="button" id="btnContinue" value="@Proestimator.Resources.ProStrings.SignAgreement" class="button nav-btn" />
            </center>
        </div>

        <div id="divVerifyInfo" class="container">
            <p>
                @Proestimator.Resources.ProStrings.SignAgreement_Verify
            </p>

            <div id="customerField" class="half-container">

                <fieldset id="customerFieldSet">

                    <div class="field-wrapper">
                        <label class="inputLabel field-label">@Proestimator.Resources.ProStrings.FirstName:</label>
                        <div class="field-control">
                            @Html.TextBoxFor(model => model.FirstName, new { autocomplete = "off" })
                            @Html.ValidationMessageFor(model => model.FirstName)
                        </div>
                    </div>

                    <div class="field-wrapper">
                        <label class="inputLabel field-label">@Proestimator.Resources.ProStrings.LastName:</label>
                        <div class="field-control">
                            @Html.TextBoxFor(model => model.LastName, new { autocomplete = "off" })
                            @Html.ValidationMessageFor(model => model.LastName)
                        </div>
                    </div>

                    <div class="field-wrapper">
                        <label class="inputLabel field-label">@Proestimator.Resources.ProStrings.CompanyProfile_CompanyName:</label>
                        <div class="field-control">
                            @Html.TextBoxFor(model => model.CompanyName, new { autocomplete = "off", @style = "color: grey; opacity: 0.5;", disabled = true })
                        </div>
                    </div>

                    <div class="field-wrapper">
                        <label class="inputLabel field-label">@Proestimator.Resources.ProStrings.WorkPhone:</label>
                        <div class="field-control">
                            @Html.TextBoxFor(model => model.WorkPhone, new { @id = "phonenumber", autocomplete = "off" })
                            @Html.ValidationMessageFor(model => model.WorkPhone)
                        </div>
                    </div>

                    <div class="field-wrapper">
                        <label class="inputLabel field-label">@Proestimator.Resources.ProStrings.Fax:</label>
                        <div class="field-control">
                            @Html.TextBoxFor(model => model.Fax, new { @id = "faxnumber", utocomplete = "off" })
                            @Html.ValidationMessageFor(model => model.Fax)
                        </div>
                    </div>

                    <div class="field-wrapper">
                        <label class="inputLabel field-label">@Proestimator.Resources.ProStrings.Email:</label>
                        <div class="field-control">
                            @Html.TextBoxFor(model => model.Email, new { autocomplete = "off" })
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>
                    </div>
                </fieldset>

            </div>

            <div id="customerField" class="half-container">
                <fieldset id="customerFieldSet">
                    <div class="field-wrapper">
                        <label class="inputLabel field-label">@Proestimator.Resources.ProStrings.Address1:</label>
                        <div class="field-control">
                            @Html.TextBoxFor(model => model.Address1, new { autocomplete = "off" })
                            @Html.ValidationMessageFor(model => model.Address1)
                        </div>
                    </div>

                    <div class="field-wrapper">
                        <label class="inputLabel field-label">@Proestimator.Resources.ProStrings.Address2:</label>
                        <div class="field-control">
                            @Html.TextBoxFor(model => model.Address2, new { autocomplete = "off" })
                            @Html.ValidationMessageFor(model => model.Address2)
                        </div>
                    </div>

                    <div class="field-wrapper">
                        <label class="inputLabel field-label">@Proestimator.Resources.ProStrings.City:</label>
                        <div class="field-control">
                            @Html.TextBoxFor(model => model.City, new { autocomplete = "off" })
                            @Html.ValidationMessageFor(model => model.City)
                        </div>
                    </div>

                    <div class="field-wrapper">
                        <label class="inputLabel field-label">@Proestimator.Resources.ProStrings.State:</label>
                        <div class="field-control">
                            @Html.TextBoxFor(model => model.State, new { autocomplete = "off" })
                            @Html.ValidationMessageFor(model => model.State)
                        </div>
                    </div>

                    <div class="field-wrapper">
                        <label class="inputLabel field-label">@Proestimator.Resources.ProStrings.Zip:</label>
                        <div class="field-control">
                            @Html.TextBoxFor(model => model.Zip, new { autocomplete = "off" })
                            @Html.ValidationMessageFor(model => model.Zip)
                        </div>
                    </div>

                    <div class="field-wrapper">
                        <label class="inputLabel field-label">@Proestimator.Resources.ProStrings.TimeZone:</label>
                        <div class="field-control">
                            @Html.DropDownListFor(model => model.TimeZone, new SelectList(Model.TimeZones))
                        </div>
                    </div>
                </fieldset>
            </div>

            <div class="container center" style="padding-bottom: 20px;">
                <input type="submit" value="@Proestimator.Resources.ProStrings.SignAgreement_SaveAndContinue" class="button nav-btn" />
                &nbsp;&nbsp;
            </div>
        </div>

    </form>
</div>