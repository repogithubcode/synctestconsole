@model Proestimator.ViewModel.PDRRatesVM

@{
    ViewBag.Title = Proestimator.Resources.ProStrings.RateProfile_ProfileRates;

}

<link href="@Url.Content("~/Content/css/PDR_RateProfiles.css")" rel="stylesheet" type="text/css" />

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">

    $(document).ready(function () {
        $("#samePanelID").change(function () {
            RefreshCopyRatesButton();
        });

        RefreshCopyRatesButton();
    });

    function RefreshCopyRatesButton()
    {
        if ($("#samePanelID").val() == "0")
        {
            $("#btnSameAs").prop("disabled", true);
            $("#btnSameAs").css("opacity", 0.3);
            $("#btnSameAs").css("margin-top", "1px");
        }
        else
        {
            $("#btnSameAs").prop("disabled", false);
            $("#btnSameAs").css("opacity", 1);
            $("#btnSameAs").css("margin-top", "1px");
        }
    }

</script>

<div class="page-container">

    @using (Html.BeginForm("Rates", "PDRRateProfile", FormMethod.Post, new { @class = "container" }))
    {
        <input type="hidden" id="redirectData" name="redirectDataField" />

        @Html.ValidationSummary(false)
        @Html.HiddenFor(model => model.LoginID)

        if (Model.GoodData)
        {
            @Html.Partial("TopMenu", Model.ProfileID)

            <div class="tabcontent container">

                <div class="half-container">

                    <fieldset id="customerFieldSet">

                        <div class="field-wrapper">
                            <label class="inputLabel field-label">* @Proestimator.Resources.PDRStrings.ProfileName</label>
                            <div class="field-control">
                                @Html.HiddenFor(model => model.ProfileID)
                                @Html.TextBoxFor(model => Model.ProfileName)
                                @Html.ValidationMessageFor(model => Model.ProfileName)
                            </div>
                        </div>

                        @if (ViewBag.EstimateID == 0)
                        {
                            <div class="field-wrapper">
                                <label class="inputLabel field-label">* @Proestimator.Resources.PDRStrings.isDefault</label>
                                <div class="field-control">
                                    @Html.CheckBoxFor(model => Model.IsDefault)
                                </div>
                            </div>
                        }

                        <div class="field-wrapper">
                            <label class="inputLabel field-label">* @Proestimator.Resources.PDRStrings.HideDentCounts</label>
                            <div class="field-control">
                                @Html.CheckBoxFor(model => model.HideDentCounts)
                            </div>
                        </div>

                        <div class="field-wrapper">
                            <label class="inputLabel field-label">* @Proestimator.Resources.PDRStrings.Tax</label>
                            <div class="field-control">
                                @Html.CheckBoxFor(model => model.Taxable)
                            </div>
                        </div>

                        <div class="field-wrapper">
                            <label class="inputLabel field-label">&nbsp;</label>
                            <div class="field-control">
                                <input id="submitButton" type="submit" class="button nav-btn" value="@Proestimator.Resources.PDRStrings.Save" />
                                <p class="error-message">@Model.Message</p>
                            </div>
                        </div>

                    </fieldset>
                </div>

            </div>

        }
        else
        {
            <h1>@Proestimator.Resources.ProStrings.InvalidProfileID</h1>
        }

    }

</div>