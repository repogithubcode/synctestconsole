@model ProEstimator.Business.Model.Financing.WisetackFinancingRequestLoanAppVM
@{
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}
<style>
    .finTopSection {
        font-size: 22px;
        font-weight: bold;
        text-align: center;
    }

    .finIcon img {
        margin-top: 20px;
        max-width: 200px;
    }

    .finBottomSection {
        margin-top: -20px;
    }

    .finBottomSectionHeader {
        margin-top: 20px;
        font-weight: bold;
    }

    .finBottomSectionSubHeader {
        margin-top: 5px;
    }

    .finBottomSectionSteps li {
        margin-top: 4px;
    }

    .finInputSection {
        margin-top: 30px;
    }

    .finBottomSectionText {
        margin-top: 5px;
    }

    .finBottomSectionFooterText {
        font-size: small;
        position: absolute;
        bottom: 0;
        text-align: center;
    }

        .finBottomSectionFooterText a:link, a:hover, a:visited, a:active {
            color: #349ad8;
            text-decoration: underline;
        }

    .finSendLoanAppButton {
        border: white;
        background-color: #349ad8;
        font-size: 22px;
        font-weight: bold;
        width: 100%;
        color: white;
        min-height: 40px;
        cursor: pointer;
        margin-top: 10px;
        align-items: center;
    }

    .finInputLabel {
        margin-bottom: 5px;
        font-weight: bold;
    }
</style>
<script>
    $(document).ready(function () {
        $('#overlay').hide();
    });

    function sendLoanApp() {
        $('#overlay').show();

        var mobileNumber = $('#MobileNumber').val();
        var transactionAmount = $('#TransactionAmount').val();
        var completionDate = $('#CompletionDate').val();

        $.getJSON('@Url.Action("SendLoanApplication", "Financing")',
            {
                userID: @Model.UserID,
                estimateID: @Model.EstimateID,
                mobileNumber: mobileNumber,
                completionDate: completionDate,
                transactionAmount: transactionAmount
            },
            function (data) {
                if (data.Success === true) {
                    $('#overlay').hide();
                    window.parent.$('#wisetackSignupDiv').dialog('close');
                } else {
                    $('#overlay').hide();
                    alert(data.ErrorMessage);
                }
            });
       }
</script>
<div id="workDesk" class="col dt1 sm_4_4 md_8_8 lg_10_12 xl_12_14">
    <div id="lgRow1" class="container" style="margin-top: 20px;">
        <div id="wisetackLoanAppDiv" title=""></div>
        <!--<div class="finTopSection">-->
            @*<div class="finIcon"><img src="~/Content/images/WisetackBlue.png" /></div>*@
        <!--</div>-->
        <div class="finBottomSection">
            <div class="finBottomSectionHeader">@Proestimator.Resources.ProStrings.FinancingLoanApplicationHowTo</div>
            <div class="finBottomSectionSubHeader">@Proestimator.Resources.ProStrings.FinancingLoanApplicationEasyStepsTitle</div>

            <div class="finBottomSectionSteps">
                <ol type="1">
                    <li>@Proestimator.Resources.ProStrings.FinancingLoanApplicationEasyStep1</li>
                    <li>@Proestimator.Resources.ProStrings.FinancingLoanApplicationEasyStep2</li>
                    <li>@Proestimator.Resources.ProStrings.FinancingLoanApplicationEasyStep3</li>
                </ol>
            </div>

            <div class="finBottomSectionHeader">@Proestimator.Resources.ProStrings.FinancingLoanApplicationStepsForCustomerTitle</div>

            <div class="finBottomSectionSteps">
                <ol type="1">
                    <li>@Proestimator.Resources.ProStrings.FinancingLoanApplicationStepsForCustomerTextStep1</li>
                    <li>@Proestimator.Resources.ProStrings.FinancingLoanApplicationStepsForCustomerTextStep2</li>
                    <li>@Proestimator.Resources.ProStrings.FinancingLoanApplicationStepsForCustomerTextStep3</li>
                </ol>
            </div>


            <div class="finInputSection">

                <div class="finInputLabel">@Proestimator.Resources.ProStrings.FinancingLoanApplicationTransactionAmountLabel $</div>
                @Html.TextBoxFor(model => model.TransactionAmount, new { @class = "currency", autocomplete = "off" })

                <div class="finInputLabel">@Proestimator.Resources.ProStrings.FinancingLoanApplicationCompletionDateLabel</div>
                @Html.TextBoxFor(model => model.CompletionDate, new { autocomplete = "off", @class = "datepicker" })

                <div class="finInputLabel">@Proestimator.Resources.ProStrings.FinancingLoanApplicationMobileNumberLabel</div>
                @Html.TextBoxFor(model => model.MobileNumber, new { @type = "tel", @class = "phone valid", autocomplete = "off" })

                <input class="finSendLoanAppButton" type="button" value="@Proestimator.Resources.ProStrings.FinancingLoanApplicationSendAppButtonLabel" onclick="sendLoanApp();" />
            </div>

            <div class="finBottomSectionFooterText">@Proestimator.Resources.ProStrings.FinancingLoanApplicationFooterText_Pre <a href="https://www.wisetack.com/lenders" class="finLink" target="_blank">lending partners</a>@Proestimator.Resources.ProStrings.FinancingLoanApplicationFooterText_Post <a href="http://wisetack.com/faqs" class="finLink" target="_blank">wisetack.com/faqs</a>.</div>
        </div>
    </div>
    <div id="overlay" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; opacity: 0.8; background: white no-repeat center; ">
        <img src="~/Content/images/loader.gif" />
    </div>
</div>